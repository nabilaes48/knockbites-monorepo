# =====================================================
# CAMERON'S CONNECT - Environment Variables
# =====================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# =====================================================

# =====================================================
# SUPABASE (Required)
# =====================================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Public URL (used by frontend)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Anonymous/Public key (safe to expose in frontend)
VITE_SUPABASE_ANON_KEY=your-anon-public-key-here

# Service Role key (NEVER expose in frontend - server/Edge functions only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# EMAIL (Edge Functions)
# =====================================================
# For send-verification-email and send-order-notification functions

# Resend (recommended)
RESEND_API_KEY=re_xxxxxxxxxxxx

# SendGrid (alternative)
SENDGRID_API_KEY=SG.xxxxxxxxxxxx

# From address for outgoing emails
EMAIL_FROM_ADDRESS=noreply@cameronsconnect.com

# =====================================================
# STRIPE (Future - Payment Processing)
# =====================================================
# For webhook-stripe Edge function

# Webhook signing secret
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# API keys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx

# =====================================================
# N8N / AUTOMATION (Future)
# =====================================================
# For webhook-n8n Edge function

N8N_WEBHOOK_SECRET=your-n8n-webhook-secret

# =====================================================
# APP CONFIGURATION
# =====================================================

# Environment: local, staging, production
VITE_APP_ENV=local

# App version (for cache busting)
VITE_APP_VERSION=1.0.0

# =====================================================
# iOS APP CONFIGURATION
# =====================================================
# Use the same Supabase values in your iOS project's
# Config.plist or environment configuration:
#
# SUPABASE_URL = (same as VITE_SUPABASE_URL)
# SUPABASE_ANON_KEY = (same as VITE_SUPABASE_ANON_KEY)
# =====================================================

# =====================================================
# OPTIONAL INTEGRATIONS
# =====================================================

# Google Maps (for store locator)
# VITE_GOOGLE_MAPS_API_KEY=AIza...

# Analytics (if not using Supabase analytics)
# VITE_ANALYTICS_KEY=...

# Sentry (error tracking)
# VITE_SENTRY_DSN=https://...@sentry.io/...
